.modal_wrapper#form_order_call
    .modal_window
        a.close(href="#") &times;
        form(action="mail.php", method="post")
            .title Оставьте ваш номер
            .sub_title мы Вам перезвоним в ближайшее время
            .inpt_white
                input(type="text", required, name="name", placeholder="Имя")
            .inpt_white
                input(type="tel", required, name="name", placeholder="Номер телефона")
            .btn_pained.blue
                input(type="submit", value="Заказать звонок")
            .PS
                | *мы не передаем Вашу персональную информацию
                | третьим лицам
            input(type="hidden", name="form_type", value="Заказ звонка")
